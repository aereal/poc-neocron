{
  "author": "aereal <aereal@aereal.org>",
  "license": "MIT",
  "main": "built/index.js",
  "types": "built/index.d.ts",
  "name": "@aereal/qron",
  "repository": "git@github.com:aereal/qron.git",
  "version": "0.0.4-alpha.0",
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "docs": "rm -rf docs/ && typedoc --options typedoc.json src/"
  },
  "peerDependencies": {
    "@aws-cdk/aws-dynamodb": ">= 1.66.0",
    "@aws-cdk/aws-events": ">= 1.66.0",
    "@aws-cdk/aws-iam": ">= 1.66.0",
    "@aws-cdk/aws-stepfunctions": ">= 1.66.0",
    "@aws-cdk/core": ">= 1.66.0"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.66.0",
    "@aws-cdk/aws-dynamodb": "^1.66.0",
    "@aws-cdk/aws-events": "^1.66.0",
    "@aws-cdk/aws-events-targets": "^1.66.0",
    "@aws-cdk/aws-iam": "^1.66.0",
    "@aws-cdk/aws-stepfunctions": "^1.66.0",
    "@aws-cdk/core": "^1.66.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^2.1.0",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": false,
          "variables": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "never"
        }
      ],
      "import/no-cycle": 2,
      "import/first": 1,
      "import/order": 2
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  }
}
